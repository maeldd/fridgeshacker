
<%= simple_form_for(@recipe) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :author %>
    <%= f.input :rate %>
    <%= f.input :difficulty %>
    <%= f.input :budget %>
    <%= f.input :prep_time %>
    <%= f.input :total_time %>
    <%= f.input :people_quantity %>
    <%= f.input :author_tip %>
    <%= f.input :ingredients %>
    <%= f.input :name %>
    <%= f.input :tags %>
    <%= f.input :image %>
    <%= f.input :nb_comments %>
    <%= f.input :cook_time %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
